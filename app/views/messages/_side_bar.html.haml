.side_bar
  .side_bar__user
    .side_bar__user-name
      .side_bar__user-name-left
        = current_user.name
      .side_bar__user-name-right
        .side_bar__user-name-right-edit
          = link_to new_group_path do
            = icon('far', 'edit')
        .seid_user-name-right-cog
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side_bar__group
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .side_bar__group-name
            = group.name
          .side_bar__group-message
            = group.show_last_message
            

